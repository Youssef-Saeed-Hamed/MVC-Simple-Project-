@model EmployeeVM
@{
	var AllDepartments = new SelectList(ViewBag.Departments, "Id", "Name");
}
		<input hidden asp-for="ImageName" />
		<div class="form-group w-50">
			<label class="col-form-label" asp-for="Name">Name</label>
			<input class="form-control" asp-for="Name" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="form-group w-50">
			<label class="col-form-label" asp-for="Image">Image</label>
			<input class="form-control" asp-for="Image" />
			<span asp-validation-for="Image" class="text-danger"></span>
		</div>
		<div class="form-group w-50">
			<label class="col-form-label" asp-for="Department">Department</label>
			<select class="form-control" asp-items="AllDepartments" asp-for="DeptId">
				<option value="@null">Choose Department</option>
			</select>
			<span asp-validation-for="Department" class="text-danger"></span>
		</div>

		<div class="form-group w-50">
			<label class="col-form-label" asp-for="Age">Age</label>
			<input class="form-control" asp-for="Age" />
			<span asp-validation-for="Age" class="text-danger"></span>
		</div>
		<div class="form-group w-50">
			<label class="col-form-label" asp-for="Address">Address</label>
			<input class="form-control" asp-for="Address" />
			<span asp-validation-for="Address" class="text-danger"></span>
		</div>
		<div class="form-group w-50">
			<label class="col-form-label" asp-for="Email">Email</label>
			<input class="form-control" asp-for="Email" />
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>
		<div class="form-group w-50">
			<label class="col-form-label" asp-for="Phone">Phone</label>
			<input class="form-control" asp-for="Phone" />
			<span asp-validation-for="Phone" class="text-danger"></span>
		</div>
		<div class="form-group w-50">
			<label class="col-form-label" asp-for="Phone">IsActive</label>
			<input type="checkbox" class="bg-primary" asp-for="IsActive" />
			<span asp-validation-for="IsActive" class="text-danger"></span>
		</div>



