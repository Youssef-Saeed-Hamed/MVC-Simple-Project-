
@model ForgetPasswordVM
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}



<h1>Creative SignIn Form</h1>
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="ForgetPassword" method="post">
			<div asp-validation-summary="All"></div>


			<input class="text email" asp-for="Email" placeholder="Email" required="">
			<span class="text-danger" asp-validation-for="Email"></span>
			
			<input type="submit" value="ResetPassword">
		</form>
		<p>You Don't' have an Account? <a asp-action="Register"> Register Now!</a></p>
	</div>
</div>


@section Validations {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}


