
@model RegisterVM
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<h1>Creative SignUp Form</h1>
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Register" method="post">
			<div asp-validation-summary="All"></div>
				<input class="text" asp-for = "FirstName" placeholder="First Name"  required="">
				<span class="text-danger" asp-validation-for="FirstName"></span>
				<br />
				<input class="text"  asp-for="LastName" placeholder="Last Name" required="">
				<span class="text-danger" asp-validation-for="LastName"></span>


				<input class="text email" asp-for="Email" placeholder="Email" required="">
				<span class="text-danger" asp-validation-for="Email"></span>


				<input class="text" type="password"  asp-for="Password" placeholder="Password" required="">
				<span class="text-danger" asp-validation-for="Password"></span>


			<input class="text w3lpass" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
			<span class="text-danger" asp-validation-for="ConfirmPassword"></span>
			<br />


			
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="IsAgree" type="checkbox" class="checkbox" required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNUP">
		</form>
		<p>Do You have an Account? <a asp-action="Login"> Login Now!</a></p>
	</div>
</div>


@section Validations {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
} 